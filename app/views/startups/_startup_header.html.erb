<div class="pull-right">
	 <% if signed_in? %>
		 <%= render "invitations/invitation_form" %>
	<% if current_user == @startup.user %>
		<a href="#myModal" role="button" class="btn btn-inverse" data-toggle="modal">New Update</a>
	<% end %>
	<% end %>
	  </div>
	  <h2><%= @startup.name %></h2>
	  <div class="muted">
		 	<%= @startup.tagline %></br>
	<% if @startup.website.present? %>
		  <%= link_to nil, "http://#{@startup.website}", target: "_blank" %></br>
		  <% end %>
	<b><%= pluralize(@startup.invitation_requests.count, 'Invitation Request')%></b>
  </div>
  <!-- Button to trigger modal -->
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel"><center>New Update</center></h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>
