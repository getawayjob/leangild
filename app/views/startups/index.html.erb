<%- model_class = Startup -%>
<div class="span3">
	<%= render 'sidebar' %>
</div>
<div class="span9">
	<%= link_to "Create Startup", new_startup_path, :class => 'btn btn-success' %>
<table class="table table-striped">
  <thead>
    <tr>
	  <th><%= model_class.human_attribute_name(:startup_id) %></th>
	  <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:pitch) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @startups.each do |startup| %>
      <tr>
		<td><%= link_to startup.name, startup_path(startup) %></td>
        <td><%= startup.pitch %></td>
        <td><%= startup.website %></td>
        <td><%=l startup.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_startup_path(startup), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      startup_path(startup),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
