<div class="well">
<h2>Basic Information</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name, :validate => true), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :username, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
  <h2>Profile Information</h2>
    <%= f.input :fullname, :required => false, :label => "Name" %>
    <%= f.input :public_email, :required => false %>
    <%= f.input :organization, :required => false %>
    <%= f.input :location, :required => false, :placeholder => "New York, NY" %>
    <%= f.input :website, :required => false, :placeholder => "http://username.com" %>
    <%= f.input :bio, :required => false, :input_html => { :class => 'span9', rows: 4 }, :placeholder => "Say something about yourself" %>
    <% if f.object.encrypted_password.present? %>
    	<%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
    <% end %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Update", :class => 'btn btn-large btn-success' %>
    <%= link_to "Cancel", :back, :class => 'btn btn-large' %>
  </div>
<% end %>
<%= image_tag (current_user.gravatar_url) %>
<h5><%= link_to "Change Your Gravatar Profile Image at gravatar.com", "http://gravatar.com", target: "_blank" %></h5>
</br>
<h3>Unhappy? Cancel Account</h3>
<p><h5><%= link_to "Cancel My Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></h5></p>
</div>
